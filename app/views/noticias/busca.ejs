<!DOCTYPE HTML>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">

    <title>Portal de notícias</title>

    <!-- JQuery -->
    <script src="js/jquery-2.2.1.js"></script>

    <!-- bootstrap - link cdn -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

    <!-- incluindo css -->
    <link href="css/style.css" rel="stylesheet">

    <!-- favicon -->
    <link rel="shortcut icon" href="images/favicon.ico" />
</head>

<body>
    <nav class="navbar navbar-default navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>

                <img src="images/logo.png" />
            </div>

            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/">HOME</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <section style="padding-left:100px;">
        <h1>Pesquisar notícia</h1>
        <br />

        <% if(validacao) { %>
            <ul>
                <% for(var i = 0; i < validacao.length; i++) { %>
                    <li>
                        <%= validacao[i].msg %>
                    </li>
                    <% } %>
            </ul>
            <% } %>

                <form action="elementos?autor=<%=noticia.autor%>" method="get">
                    <label>Nome autor</label>
                    <input type="text" id="autor" name="autor" value="<%=noticia.autor%>" placeholder="Autor da notícia" />
                    <br />
                    <label>Data Notícia</label>
                    <input type="date" id="data_noticia" name="data_noticia" value="<%=noticia.data_noticia%>">
                    <br />
                    <label>Assunto Notícia</label>
                    <input type="text" id="assunto" name="assunto" value="<%=noticia.assunto%>" placeholder="Assunto da notícia" />
                    <br />
                    <input type="submit" value="Buscar" />
                </form>
                <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
    </section>
</body>

</html>